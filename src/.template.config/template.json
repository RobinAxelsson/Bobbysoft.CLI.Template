{
    "$schema": "http://json.schemastore.org/template",
    "author": "RobinAxelsson",
    "classifications": [ "CLI", "CLI-GUI" ],
    "identity": "Bobbysoft.Cli.Template",
    "name": "Bobbysoft.CLI Template",
    "shortName": "bscli",
    "sourceName": "$projectName$",
    "preferNameDirectory":true,
    "symbols": {
        "toolCommandName":{
            "type": "parameter",
            "datatype": "string",
            "defaultValue": "ADD COMMAND LINE COMMAND HERE",
            "description": "The command in the command line",
            "replaces": "$toolCommandName$"
        },
        "targetFramework": {
            "type": "parameter",
            "datatype": "string",
            "defaultValue": "net6.0",
            "description": "The target framework for the project.",
            "replaces": "$targetFramework$"
        }
    }
  }